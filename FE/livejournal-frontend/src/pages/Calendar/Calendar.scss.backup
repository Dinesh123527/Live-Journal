            background-repeat: no-repeat;
            background-position: right 1rem center;
            padding-right: 2.5rem;

            &:hover {
              border-color: var(--marvel-primary);
              background-color: var(--card-bg);
            }

            option {
              background: var(--card-bg);
              color: var(--text-primary);
              padding: 0.5rem;
            }
          }

// Bell ring animation for reminder icon
@keyframes bell-ring {
  0%, 100% {
    transform: rotate(0deg);
  }
  10%, 30% {
    transform: rotate(-10deg);
  }
  20%, 40% {
    transform: rotate(10deg);
  }
  50% {
    transform: rotate(0deg);
  }
}

// Pulse dot animation for status indicator
@keyframes pulse-dot {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
          &.checkbox {
            flex-direction: row;
            align-items: center;
            gap: 0.75rem;

